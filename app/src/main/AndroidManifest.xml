<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.futabooo.android.booklife"
    >

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:name=".BookLife"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/Theme.BookLife"
      >

    <uses-library
        android:name="org.apache.http.legacy"
        android:required="false"
        />

    <activity
        android:name=".screen.splash.SplashActivity"
        android:theme="@style/Theme.BookLife.Splash"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".screen.login.LoginActivity">
    </activity>

    <activity
        android:name=".screen.MainActivity">
    </activity>

    <activity
        android:name=".screen.search.SearchActivity">
    </activity>

    <activity
        android:name=".screen.bookdetail.BookDetailActivity">
    </activity>

    <activity
        android:name=".screen.licenses.LicensesActivity">
    </activity>

    <activity
        android:name=".screen.option.OptionActivity">
    </activity>

  </application>

</manifest>